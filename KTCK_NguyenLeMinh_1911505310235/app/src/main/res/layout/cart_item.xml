<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cart_item_img"
            android:background="@drawable/banhcuon"
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tieu de item"
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tieu de item"
                android:textSize="18dp"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">
                <ImageButton
                    android:id="@+id/btn_decrease_in_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/circle"
                    android:src="@drawable/minus"/>
                <EditText
                    android:id="@+id/tbx_quantity_item_in_cart"
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_box"/>
                <ImageButton
                    android:id="@+id/btn_increase_in_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/circle"
                    android:src="@drawable/plus"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/xoa_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="Xoa"/>
    </RelativeLayout>
</LinearLayout>