<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_peekHeight="200dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3b3a38">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CART"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_cart"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>
    <LinearLayout
        android:id="@+id/bottom_order_sheet_cart"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/total_prices_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sum:165000VND"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_order_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Order"
            android:textSize="18dp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/ic_baseline_storefront_24"
            android:paddingStart="20dp"
            android:drawablePadding="-20dp"
            android:gravity="center"
            android:background="#ed7f09"/>
    </LinearLayout>
</LinearLayout>